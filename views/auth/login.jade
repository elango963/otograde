extends ../layout/auth_layout 
block content 
	.login-box
		.login-logo
			a(href='/')
				b OTO
				| GRADE
		.card
			.card-body.login-card-body
				form#login(action='/', method='post')
					.input-group.mb-3
						input.form-control(type='email', name='email', placeholder='Email', required)
						.input-group-append
							.input-group-text
								span.fa.fa-envelope
					.input-group.mb-3
						input.form-control(type='password', name='password', placeholder='Password', required)
						.input-group-append
							.input-group-text
								span.fa.fa-lock
					.row
						.col-8
							.icheck-primary
								input#remember(type='checkbox')
								label(for='remember')
								| Remember Me
						.col-4
						button.btn.btn-primary.btn-block(type='submit') Sign In
					p.mb-1
						a(href='/') I forgot my password
					p.mb-0
						a.text-center(href='/register') Register a new membership

block script
	script(src='bundle/js/auth.js')