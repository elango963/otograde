form#validator_test_drive_form.col-md-12.p-0(role='form', class="form-horizontal")
	.col-md-12.p-0
		if (data.question && data.question.rating && data.question.rating.testDrive)
			each inputValue, inputKey in data.question.rating.testDrive
				.border-question(class = '#{inputValue.class}')
					label.col-form-label(for='#{inputKey}') #{inputValue.label ? inputValue.label : inputValue}
					if (inputValue.type === "radio")
						.form-group.rating-checkbox-group
							each value, key in inputValue.values
								span
									input.rating-checkbox(type='radio', name='#{inputKey}', value='#{key}', id='#{inputKey}_#{key}', class= '#{value.class ? value.class : ""}', required)
									label.rating-checkbox-label(for='#{inputKey}_#{key}', class= '#{value.class ? value.class : ""}') #{value.label ? value.label : value }
							span.col-sm-12.error.error-block
	.col-md-12.mg-tp-20.p-0
		.col-md-3.col-xs-6.p-0
			include image-slider
		.col-md-4.col-xs-6.p-0.right
			.col-md-8.col-xs-12.p-0.right
				input.btn.btn-block.btn-default.btn-flat.btn-create.btn-orange.js_valuator_test_drive_submit_btn(type="submit", value= "Save")